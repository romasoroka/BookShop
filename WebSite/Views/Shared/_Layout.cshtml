<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RidneShop</title>
    <link rel="icon" type="image/png" href="~/favicon.ico" asp-append-version="true" />
    <meta name="description" content="RidneShop — інтернет-магазин з продажу українських книжок у Польщі. Купуйте якісні продукти онлайн!" />
    <meta name="keywords" content="RidneShop, RidneShop.pl, Ridne.pl, Купити книжки українською в польщі, Українські книжки в Польщі, Рідне, Магазин українських книжок в Польщі, купити дешево українські книжки в Польщі, магазин українських книжок, українська література, дитячі книжки українською, купити українські книги дешево" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/my.css" />
    <link rel="stylesheet" href="~/WebSite.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" />

</head>
<body>
   
    <partial name="_Header" />

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <div class="sidebar-header">
            <span class="navbar-brand text-uppercase">RidneShop.pl</span>
            <a href="javascript:void(0)" class="close-btn" onclick="toggleSidebar()">×</a>
        </div>
        <div class="sidebar-content">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Головна</a>
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Shop">Магазин</a>
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="About">Про нас</a>

            @if (User.IsInRole(SD.Role_Admin))
            {
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        Менеджмент (адмін)
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Категорії</a></li>
                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Товари</a></li>
                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index">Замовлення</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>

    <div class="container main-content" id="main">
        <main role="main" class="mb-5">
            <partial name="_Notification" />
            @RenderBody()
        </main>

    </div>
      
    <div class="main-content-overlay" onclick="toggleSidebar()"></div>


    
    
    <script src="https://cdn.tiny.cloud/1/dgsj2y3y3a7298erhgwpp6ewazwjzj8nc669vlrpces2orx4/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.2.1/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.2.1/js/dataTables.min.js" referrerpolicy="origin"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
