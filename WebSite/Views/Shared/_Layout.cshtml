<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebSite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/my.css" />
    <link rel="stylesheet" href="~/WebSite.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-toggleable navbar-light  border-bottom box-shadow">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <span class="burger-menu-btn me-3" onclick="toggleSidebar()">☰</span>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ridne</a>

                <div class="navbar-collapse collapse justify-content-end align-items-center">
                    <!-- Корзина окремо -->
                    <a class="nav-link text-dark me-3" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart fs-5"></i>
                    </a>

                    <!-- Логін частина -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <div class="sidebar-header">
            <span class="navbar-brand">Ridne</span>
            <a href="javascript:void(0)" class="close-btn" onclick="toggleSidebar()">×</a>
        </div>
        <div class="sidebar-content">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>

            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Managment
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index">Order</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container main-content" id="main">
        <main role="main" class="mb-5">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <div class="main-content-overlay" onclick="toggleSidebar()"></div>


    <style>
        .close-btn {
            color: white; /* Білий колір іконки */
            font-size: 2rem;
            cursor: pointer;
            transition: all 0.3s ease;
            background: transparent !important; /* Важливо: відключає будь-який фон */
            border: none;
            padding: 0.5rem;
        }

            .close-btn:hover {
                color: #F9F295; /* Світло-золотий при наведенні */
                transform: scale(1.1); /* Легке збільшення */
                text-shadow: 0 0 8px rgba(249, 242, 149, 0.5); /* М'яке світіння */
            }
        .main-content-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1020; /* Нижче сайдбара (1030), але вище всього іншого */
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

            .main-content-overlay.active {
                opacity: 1;
                visibility: visible;
            }


        body.sidebar-open {
            overflow: hidden;
        }
        .navbar, .sidebar-header {
            background: linear-gradient( 135deg, #F9F295 0%, #E0AA3E 30%, #E0AA3E 45%, #B88A44 70%, #B88A44 100% );
            background-size: 200% 200%;
        }
    </style>
    <script src="https://cdn.tiny.cloud/1/dgsj2y3y3a7298erhgwpp6ewazwjzj8nc669vlrpces2orx4/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.2.1/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.2.1/js/dataTables.min.js" referrerpolicy="origin"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
